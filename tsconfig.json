{
    "compilerOptions": {
      "outDir": "./public",
      "target": "ES6",
      "allowJs": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "module": "amd",
      "moduleResolution": "node",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "src/**/*.js", "test/**/*.ts", "src/**/*.tsx", "src/**/*.jsx"]
  }